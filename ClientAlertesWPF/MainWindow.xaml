<Window x:Class="ClientAlertesWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        Title="Système d'alertes - Client"
        Height="450" Width="800"
        WindowState="Normal"
        ShowInTaskbar="False"
        Loaded="Window_Loaded">
    <Grid>
        <tb:TaskbarIcon x:Name="NotifyIcon"
                        ToolTipText="Système d'alertes"
                        DoubleClickCommand="{Binding ShowWindowCommand}">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Ouvrir" Command="{Binding ShowWindowCommand}"/>
                    <MenuItem Header="Quitter" Command="{Binding ExitCommand}"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Grid>
</Window>