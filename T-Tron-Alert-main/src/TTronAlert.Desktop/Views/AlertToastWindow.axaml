<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:TTronAlert.Desktop.ViewModels"
        x:Class="TTronAlert.Desktop.Views.AlertToastWindow"
        x:DataType="vm:AlertItemViewModel"
        SystemDecorations="None"
        TransparencyLevelHint="Transparent"
        Background="Transparent"
        CanResize="False"
        ShowInTaskbar="False"
        Topmost="True"
        Width="420"
        Height="160"
        WindowStartupLocation="Manual"
        xmlns:converters="clr-namespace:TTronAlert.Desktop.Converters">

	<!-- Glassmorphism Container with futuristic design -->
	<Border Name="ToastBorder"
            Background="#1A0F1F1F"
            BorderBrush="#DDFFFFFF"
            BorderThickness="1.5"
            CornerRadius="16"
            Padding="20,16"
            BoxShadow="0 0 40 4 #60FFFFFF, 0 8 32 -8 #80000000, inset 0 1 2 0 #40FFFFFF"
            Opacity="0"
            ClipToBounds="True">
		<Border.RenderTransform>
			<TranslateTransform X="400" Y="0"/>
		</Border.RenderTransform>
		<!-- Inner glow effect border -->
		<Border.Effect>
			<DropShadowEffect Color="#FFFFFF" BlurRadius="20" Opacity="0.15" OffsetX="0" OffsetY="0"/>
		</Border.Effect>
		<Border.Styles>
			<!-- Info Style - Cyan/Blue futuristic -->
			<Style Selector="Border.info">
				<Setter Property="BorderBrush">
					<Setter.Value>
						<LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
							<GradientStop Color="#AAFFFFFF" Offset="0"/>
							<GradientStop Color="#CC00D4FF" Offset="0.5"/>
							<GradientStop Color="#AAFFFFFF" Offset="1"/>
						</LinearGradientBrush>
					</Setter.Value>
				</Setter>
				<Setter Property="BoxShadow" Value="0 0 50 6 #6000D4FF, 0 8 32 -8 #80000000, inset 0 1 2 0 #6000D4FF"/>
			</Style>
			<!-- Warning Style - Orange/Yellow glow -->
			<Style Selector="Border.warning">
				<Setter Property="BorderBrush">
					<Setter.Value>
						<LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
							<GradientStop Color="#AAFFFFFF" Offset="0"/>
							<GradientStop Color="#CCFFD740" Offset="0.5"/>
							<GradientStop Color="#AAFFFFFF" Offset="1"/>
						</LinearGradientBrush>
					</Setter.Value>
				</Setter>
				<Setter Property="BoxShadow" Value="0 0 50 6 #60FFD740, 0 8 32 -8 #80000000, inset 0 1 2 0 #60FFD740"/>
			</Style>
			<!-- Critical Style - Red/Pink intense glow -->
			<Style Selector="Border.critical">
				<Setter Property="BorderBrush">
					<Setter.Value>
						<LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
							<GradientStop Color="#AAFFFFFF" Offset="0"/>
							<GradientStop Color="#CCFF6E40" Offset="0.5"/>
							<GradientStop Color="#AAFFFFFF" Offset="1"/>
						</LinearGradientBrush>
					</Setter.Value>
				</Setter>
				<Setter Property="BoxShadow" Value="0 0 50 6 #60FF6E40, 0 8 32 -8 #80000000, inset 0 1 2 0 #60FF6E40"/>
			</Style>
		</Border.Styles>
		<!-- Background gradient overlay -->
		<Border.Background>
			<LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
				<GradientStop Color="#26000000" Offset="0"/>
				<GradientStop Color="#1A0A0A0A" Offset="0.5"/>
				<GradientStop Color="#26000000" Offset="1"/>
			</LinearGradientBrush>
		</Border.Background>
		<Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="Auto,*,Auto">
			<!-- Logo with futuristic glow -->
			<Border Grid.Row="0" Grid.Column="0" Width="40" Height="40" Margin="0,0,12,0"
                    Background="#15FFFFFF"
                    BorderBrush="#40FFFFFF"
                    BorderThickness="1"
                    CornerRadius="20"
                    BoxShadow="0 0 16 0 #40FFFFFF, inset 0 1 4 0 #30FFFFFF">
				<Image Source="/Assets/logo.png" Width="28" Height="28" Stretch="Uniform"/>
			</Border>
			<!-- Title with gradient effect -->
			<StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Spacing="8" Margin="0,4,0,12">
				<TextBlock Text="{Binding Title}"
                           FontSize="17"
                           FontWeight="Bold"
                           Foreground="White"
                           TextTrimming="CharacterEllipsis"
                           VerticalAlignment="Center">
					<TextBlock.Effect>
						<DropShadowEffect Color="White" BlurRadius="8" Opacity="0.3" OffsetX="0" OffsetY="0"/>
					</TextBlock.Effect>
				</TextBlock>
			</StackPanel>
			<!-- Close button with modern style -->
			<Button Grid.Row="0" Grid.Column="2"
                    Content="âœ•"
                    Background="#10FFFFFF"
                    Foreground="White"
                    BorderBrush="#30FFFFFF"
                    BorderThickness="1"
                    Width="32"
                    Height="32"
                    CornerRadius="16"
                    Padding="0"
                    FontSize="18"
                    Cursor="Hand"
                    Click="CloseButton_Click">
				<Button.Styles>
					<Style Selector="Button:pointerover">
						<Setter Property="Background" Value="#20FFFFFF"/>
						<Setter Property="BorderBrush" Value="#60FFFFFF"/>
					</Style>
				</Button.Styles>
			</Button>
			<!-- Message with enhanced readability -->
			<TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                       Text="{Binding Message}"
                       FontSize="14"
                       Foreground="#F0F0F0"
                       TextWrapping="Wrap"
                       MaxHeight="70"
                       LineHeight="20"
                       Margin="0,0,0,12"/>
			<!-- Status bar with glassmorphic badges -->
			<StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" Spacing="10">
				<Border Background="#20FFFFFF"
                        BorderBrush="#40FFFFFF"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="10,5"
                        BoxShadow="inset 0 1 3 0 #20FFFFFF">
					<TextBlock Text="{Binding LevelText}"
                               FontSize="11"
                               Foreground="White"
                               FontWeight="Bold"
                               LetterSpacing="1"/>
				</Border>
				<Border Background="#15FFFFFF"
                        BorderBrush="#30FFFFFF"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="10,5">
					<TextBlock Text="{Binding TimeAgo}"
                               FontSize="11"
                               Foreground="#CCCCCC"
                               VerticalAlignment="Center"/>
				</Border>
			</StackPanel>
		</Grid>
	</Border>
</Window>