<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:TTronAlert.Desktop.ViewModels"
        x:Class="TTronAlert.Desktop.Views.AlertToastWindow"
        x:DataType="vm:AlertItemViewModel"
        SystemDecorations="None"
        TransparencyLevelHint="Transparent"
        Background="Transparent"
        CanResize="False"
        ShowInTaskbar="False"
        Topmost="True"
        Width="420"
        Height="160"
        WindowStartupLocation="Manual">

<Border Name="ToastBorder"
            Background="#1A0F1F1F"
            BorderBrush="#DDFFFFFF"
            BorderThickness="2"
		
		CornerRadius="20"
		Padding="20,16"
		BoxShadow="0 0 50 5 #80FF00FF, 0 10 40 -10 #A0000000, inset 0 2 4 0 #60FFFFFF"
		Opacity="0"
		ClipToBounds="True">
		<Border.RenderTransform>
			<TranslateTransform X="400" Y="0"/>
		</Border.RenderTransform>

		<Border.Effect>
			<BlurEffect Radius="20"/>

		</Border.Effect>


		<Border.Background>
			<LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
				<GradientStop Color="#8000FF" Offset="0"/>

				<GradientStop Color="#FF00FF" Offset="1"/>

			</LinearGradientBrush>
		</Border.Background>

		<Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="Auto,*,Auto">

			<Button Grid.Row="0" Grid.Column="2"
                    Content="âœ•"
                    Width="24" Height="24"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Background="Transparent"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"
                    Click="CloseButton_Click"
                    Cursor="Hand"/>


			<TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                       Text="{Binding Title}"
                       FontSize="18"
			FontWeight="Bold"
			Foreground="White"
			TextWrapping="Wrap"
			Margin="0,0,0,12"/>


			<TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                       Text="{Binding Message}"
                       FontSize="14"
                       Foreground="#DDDDDD"
                       TextWrapping="Wrap"
                       Margin="0,0,0,12"/>


			<StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" Spacing="10">
				<Border Background="#40FFFFFF"
					
					BorderBrush="#80FFFFFF"
					BorderThickness="1.5"
					CornerRadius="10"
					Padding="12,6"
					BoxShadow="inset 0 1 3 0 #20FFFFFF">
					<TextBlock Text="{Binding LevelText}"
                               FontSize="12"
                               Foreground="White"
                               FontWeight="Bold"
                               LetterSpacing="1"/>
				</Border>
				<Border Background="#30FFFFFF"
                        BorderBrush="#60FFFFFF"
                        BorderThickness="1.5"
                        CornerRadius="10"
                        Padding="12,6">
					<TextBlock Text="{Binding TimeAgo}"
                               FontSize="12"
                               Foreground="#CCCCCC"
                               VerticalAlignment="Center"/>
				</Border>
			</StackPanel>
		</Grid>
	</Border>
</Window>