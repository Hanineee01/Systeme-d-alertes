<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="TTronAlert.Desktop.App">
	<Application.Styles>
		<FluentTheme />
		<Style Selector="TextBlock">
			<Setter Property="FontFamily" Value="Arial" />
		</Style>
		<Style Selector="Border.info">
			<Setter Property="Background">
				<Setter.Value>
					<LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
						<GradientStop Color="#3777FF" Offset="0" />
						<GradientStop Color="#FFFFFF" Offset="1" />
						<!-- Variante plus foncée pour le dégradé -->
					</LinearGradientBrush>
				</Setter.Value>
			</Setter>
		</Style>
		<Style Selector="Border.warning">
			<Setter Property="Background">
				<Setter.Value>
					<LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
						<GradientStop Color="#FF8C42" Offset="0" />
						<GradientStop Color="#CC5A00" Offset="1" />
						<!-- Variante plus foncée -->
					</LinearGradientBrush>
				</Setter.Value>
			</Setter>
		</Style>
		<Style Selector="Border.critical">
			<Setter Property="Background">
				<Setter.Value>
					<LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
						<GradientStop Color="#FF4B4B" Offset="0" />
						<GradientStop Color="#CC0000" Offset="1" />
						<!-- Variante plus foncée -->
					</LinearGradientBrush>
				</Setter.Value>
			</Setter>
		</Style>
		<!-- Pour le texte blanc sur les bordures colorées -->
		<Style Selector="Border.info TextBlock, Border.warning TextBlock, Border.critical TextBlock">
			<Setter Property="Foreground" Value="#000000" />
		</Style>
	</Application.Styles>
</Application>